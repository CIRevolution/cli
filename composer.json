{
    "name": "cirevolution/cli",
    "type": "project",
    "description": "A command-line tool for CodeIgniter Revolution",
    "keywords": [
        "cli",
        "command",
        "command line",
        "codeigniter"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Nabil Muhammad Firdaus",
            "email": "nabilftd@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "aura/cli-kernel": "~2.0",
        "monolog/monolog": "~1.0"
    },
    "autoload": {
        "psr-4": {
            "CLI\\": "src/",
            "CLI\\_Config\\": "config/"
        }
    },
    "extra": {
        "aura": {
            "type": "project",
            "config": {
                "common": "CLI\\_Config\\Common",
                "dev": "CLI\\_Config\\Dev",
                "test": "CLI\\_Config\\Test",
                "prod": "CLI\\_Config\\Prod"
            }
        },
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "require-dev": {
        "satooshi/php-coveralls": "0.6.*",
        "cirevolution/system": "1.0.*-dev"
    },
    "minimum-stability": "dev"
}
